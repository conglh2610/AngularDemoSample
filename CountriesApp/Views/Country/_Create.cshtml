@model CountriesApp.Models.Country
@Scripts.Render("~/bundles/appCreate")
@Scripts.Render("~/bundles/jqueryval")


<div class="modal-dialog">
    <form id="frmNewCountry">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create New Country</h4>
            </div>
            @Html.ValidationSummary()
            <div class="modal-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(t => t.Name, new { @class = "col-md-2 control-label" })
                        @Html.TextBoxFor(t => t.Name, new { @class = "form-control", type = "text" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(t => t.Code, new { @class = "col-md-2 control-label" })

                        @Html.TextBoxFor(t => t.Code, new { @class = "form-control", type = "text" })
                    </div>
                </div>


                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(t => t.Abrev, new { @class = "col-md-2 control-label" })

                        @Html.TextAreaFor(t => t.Abrev, new { @class = "form-control", type = "text" })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnCreateNew">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </form>
</div><!-- /.modal-dialog -->
